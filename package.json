{
  "name": "weaveclient",
  "version": "1.0.0-alpha-3",
  "description": "Weave Client",
  "author": "Gerry <nickel_chrome@exfio.org>",
  "license": "(MPL-2.0 OR LGPL-3.0)",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickel-chrome/weaveclient-js"
  },
  "bugs": {
    "url": "https://github.com/nickel-chrome/weaveclient-js/issues"
  },
  "scripts": {
    "bundle": "browserify --standalone weave . -o weaveclient-bundle.js && uglifyjs weaveclient-bundle.js -o weaveclient-bundle-min.js --source-map weaveclient-bundle-min.js.map --source-map-root https://github.com/nickel-chrome/weaveclient-js -c -m",
    "prepublish": "browserify --standalone weave . -o weaveclient-bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "main": "weaveclient.js",
  "bin": {
    "weaveclient": "./bin/weaveclient"
  },
  "engine": "*",
  "dependencies": {
    "URIjs": "^1.16.1",
    "browserid-crypto": "git+https://github.com/eXfio/browserid-crypto.git#master",
    "fxa-js-client": "git+https://github.com/eXfio/fxa-js-client.git#master",
    "hawk": "^3.1.3",
    "node-forge": "^0.6.39",
    "node-getopt": "^0.2.3",
    "p-promise": "^0.5.0",
    "sprintf": "^0.1.5",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "uglify-js": "^2.6.2"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "xmlhttprequest": false,
    "browserid-crypto/lib/algs/ds": false
  },
  "browserify-shim": {
    "node-forge": "global:forge",
    "fxa-js-client": "global:FxAccountClient",
    "hawk": "global:hawk",
    "browserid-crypto": "global:jwcrypto"
  }
}
